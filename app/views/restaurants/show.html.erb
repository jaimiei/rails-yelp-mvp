<div class="container">
  <h1>Restaurant</h1>
  <h2><%= @restaurant.name %></h2>
  <p><strong>Address: </strong><%= @restaurant.address %></p>
  <p><strong>Phone number: </strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category: </strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><strong><%= review.rating %> out of 5</strong></li>
      <li class="list-group-item"><%= review.content %></li>
      <br>
    <% end %>
  </ul>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <br>
  <p><strong>Your review:</strong></p>
    <%= f.select :rating, [1, 2, 3, 4, 5] %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back to restaurants", restaurants_path, class: "text-decoration-none" %>
  <br>
  <br>
</div>
